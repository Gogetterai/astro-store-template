---
const { seo } = Astro.props;
---
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{seo?.title || 'Store'}</title>
  <meta name="description" content={seo?.description || ''} />
  <meta name="keywords" content={(seo?.keywords || []).join(', ')} />
  <link rel="icon" href="/assets/logo.svg" />
  <style>
    :root { --brand:#0E1A2B; --mint:#5BE1C5; --slate:#3B4758; }
    body { font-family: system-ui,-apple-system,Segoe UI,Roboto,sans-serif; margin:0; color:#0f172a; }
    .container { max-width:1100px; margin:0 auto; padding:1.25rem; }
    .btn { background:var(--brand); color:white; padding:.8rem 1rem; border-radius:.75rem; text-decoration:none; display:inline-block; }
    .btn.secondary { background:var(--mint); color:#0E1A2B; }
    .card { background:white; border-radius:1rem; padding:1rem; box-shadow:0 6px 24px rgba(15,23,42,.08); }
    .grid { display:grid; gap:1rem; }
    @media(min-width:900px){ .grid.cols-3{ grid-template-columns:repeat(3,1fr); } .grid.cols-2{ grid-template-columns:repeat(2,1fr);} }
    header.site { display:flex; align-items:center; gap:1rem; padding:1rem 0; }
    header.site img.logo { width:40px; height:40px; }
    footer.site { margin-top:3rem; padding:2rem 0; color:#334155; }
  </style>
</head>
